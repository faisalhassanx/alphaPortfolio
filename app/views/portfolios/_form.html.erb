<%= form_for @portfolio_item do |f| %>
  
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <br />
  
  
  <div class="field">
    <%= f.label :subtitle %>
    <%= f.text_field :subtitle %>
  </div>
  <br />
  
  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
  <br />
  
  <div class="actions">
    <%= f.submit ( f.object.new_record? ? "Create Portfolio Item" : "Update Portfolio Item") %>
  </div>
  
<% end %>